<h1>Items</h1>

<table style="width:20%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
  </thead>
  <% @items.each do |item| %>
  <tr style="text-align:center">
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= link_to 'Show', item_path(item) %>
    <%= link_to 'Edit', edit_item_path(item), method: 'get' %></td>
      <td>
    <%= button_to 'Delete', item_path(item), method: 'delete' %>    </td>
  </tr>
  <% end %>

</table>
<br>
<%= link_to 'Add New Item', new_item_path %>